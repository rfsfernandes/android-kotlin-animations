<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.LOOPUIUX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/red_500</item>
    <item name="colorPrimaryVariant">@color/red_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/dark_gray</item>
    <item name="colorSecondaryVariant">@color/secondary_variant</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <item name="fontFamily">@font/koho_regular</item>
    <item name="android:windowActivityTransitions">true</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.LOOPUIUX.NoActionBar.fullscreen"  parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="Theme.LOOPUIUX.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.LOOPUIUX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.LOOPUIUX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="title_style" parent="Widget.AppCompat.TextView">
    <item name="fontFamily">@font/koho_semi_bold</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="content_style" parent="Widget.AppCompat.TextView">
    <item name="fontFamily">@font/koho_regular</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="error_text_appearence" parent="TextAppearance.AppCompat">
    <item name="android:fontFamily">@font/koho_regular</item>
    <item name="android:textColor">@color/red_500</item>
    <item name="fontFamily">@font/koho_regular</item>
    <item name="android:textSize">13sp</item>
    <item name="autoSizeMaxTextSize">13sp</item>
  </style>

  <style name="text_input_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="boxBackgroundColor">@color/dirty_white</item>
    <item name="boxStrokeColor">@color/red_500</item>
    <item name="counterEnabled">true</item>
    <item name="counterOverflowTextColor">@color/red_500</item>
    <item name="counterTextColor">@color/dirty_white</item>
    <item name="hintTextColor">@color/black</item>
    <item name="android:textColorHint">@color/black</item>
    <item name="errorTextColor">@color/red_500</item>
    <item name="errorIconTint">@color/red_500</item>
    <item name="boxStrokeErrorColor">@color/red_500</item>
    <item name="errorTextAppearance">@style/error_text_appearence</item>
  </style>

</resources>
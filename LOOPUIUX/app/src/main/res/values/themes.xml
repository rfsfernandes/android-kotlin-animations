<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.LOOPUIUX" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/red_500</item>
    <item name="colorPrimaryVariant">@color/red_700</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/dark_gray</item>
    <item name="colorSecondaryVariant">@color/secondary_variant</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <item name="fontFamily">@font/koho_regular</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.LOOPUIUX.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.LOOPUIUX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.LOOPUIUX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="title_style" parent="Widget.AppCompat.TextView">
    <item name="fontFamily">@font/koho_semi_bold</item>
    <item name="android:textSize">24sp</item>
  </style>

  <style name="content_style" parent="Widget.AppCompat.TextView">
    <item name="fontFamily">@font/koho_regular</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cardView2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/upload">
        <Constraint
            android:id="@+id/cardView2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/url">
        <Constraint
            android:id="@+id/textInputLayoutURL"
            motion:layout_constraintEnd_toEndOf="@+id/buttonURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginEnd="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/buttonURL"
            motion:layout_constraintStart_toStartOf="@+id/buttonUpload"
            android:layout_marginTop="8dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/textInputLayoutURL"
            motion:layout_constraintEnd_toEndOf="@+id/buttonURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="1dp"
            motion:layout_constraintTop_toBottomOf="@+id/buttonURL"
            motion:layout_constraintStart_toStartOf="@+id/buttonUpload"
            android:layout_marginTop="8dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/upload" />
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/url" />
    <Transition
        motion:constraintSetStart="@+id/url"
        motion:constraintSetEnd="@+id/upload" />
    <Transition
        motion:constraintSetStart="@+id/url"
        motion:constraintSetEnd="@+id/end" />
</MotionScene>